<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".TelaFornecedorActivity">

    <TextView
        android:id="@+id/nomeServicoSolicitado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exemplo de serviço"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/nomeCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fulano de tal"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/nomeServicoSolicitado"
        app:layout_constraintStart_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tvEnderecoSolicitado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="4"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:text="Rua sem criatividade, Nº 0"
        app:layout_constraintTop_toBottomOf="@+id/nomeCliente"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btnAceitar"
        android:layout_width="166dp"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Aceitar"
        app:layout_constraintRight_toLeftOf="@+id/btnRecusar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEnderecoSolicitado" />

    <Button
        android:id="@+id/btnRecusar"
        android:layout_width="166dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="Recusar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnAceitar"
        app:layout_constraintTop_toBottomOf="@+id/tvEnderecoSolicitado" />

</androidx.constraintlayout.widget.ConstraintLayout>