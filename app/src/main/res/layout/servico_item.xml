<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ServicoItemClienteActivity">

    <TextView
        android:id="@+id/nomeServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exemplo de serviÃ§o"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/descricaoServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:maxLines="4"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/nomeServico"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/precoServico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R$200,00"
        app:layout_constraintTop_toBottomOf="@+id/descricaoServico"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="18sp"
        android:textColor="@android:color/holo_green_dark"
        />
    <Button
        android:id="@+id/btnSolicitar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/precoServico"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Solicitar"
        android:backgroundTint="@android:color/holo_blue_light"
        />

</androidx.constraintlayout.widget.ConstraintLayout>